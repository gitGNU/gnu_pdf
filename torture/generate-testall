testfiles=$*
echo "/*
 * This file is automatically generated by the \`generate_testall' script.
 */

#include <check.h>
"

for testfile in $testfiles
do
    echo "extern TCase *`basename $testfile .c | tr - _` (void);"
done
echo ""
echo "int
main (int argc, char **argv)
{
  int failures;
  SRunner *sr;
  Suite *s;

  s = suite_create(\"libgnupdf\");
"
for testfile in $testfiles
do
    echo "  suite_add_tcase (s, `basename $testfile .c | tr - _`());"
done
echo ""
echo "  sr = srunner_create (s);
  srunner_run_all (sr, CK_NORMAL);
  failures = srunner_ntests_failed (sr);
  srunner_free (sr);
  
  return (failures == 0) ? 0 : 1;
}
"
echo "/* End of testall.c */"

# End of generate_testall
